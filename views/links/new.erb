<%= form('/links/create', :post) %>

<% fieldset(:link) do |f| %>
	<%= f.label :title %>
  	<%= f.input(:title) %>
	<%= f.label :url %>
  	<%= f.input(:url) %>
	<%= f.label :description %>
  	<%= f.textarea(:description) %>
	<%= f.label :tags %>
  	<%= f.input(:tags) %>
<% end %>

<%= submit 'Add' %>