<%= form('/register', :post) %>

<% fieldset(:user) do |f| %>
	<%= f.label :email %>
  	<%= f.input(:email) %>
	<%= f.label :password %>
  	<%= f.password(:password) %>
	<%= f.label :password_confirmation %>
  	<%= f.password(:password_confirmation) %>
<% end %>

<%= submit 'Sign up' %>
<p>Already have an account? <%= link 'Sign in', '/login'%>